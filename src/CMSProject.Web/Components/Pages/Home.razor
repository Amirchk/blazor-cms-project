@page "/"
@layout AdminLayout

<PageTitle>Dashboard - Blazor CMS</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Dashboard</MudText>
<MudText Class="mb-8">Welcome to your Blazor CMS Admin Panel</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h5">Content</MudText>
                <MudText Typo="Typo.h3">0</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Total Articles</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h5">Media</MudText>
                <MudText Typo="Typo.h3">0</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Total Files</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h5">Categories</MudText>
                <MudText Typo="Typo.h3">0</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Total Categories</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h5">Users</MudText>
                <MudText Typo="Typo.h3">0</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Total Users</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudText Typo="Typo.h4" Class="mt-8 mb-4">Quick Actions</MudText>
<MudGrid>
    <MudItem xs="12" md="4">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" StartIcon="@Icons.Material.Filled.Add">
            New Content
        </MudButton>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" FullWidth="true" StartIcon="@Icons.Material.Filled.Upload">
            Upload Media
        </MudButton>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudButton Variant="Variant.Filled" Color="Color.Tertiary" FullWidth="true" StartIcon="@Icons.Material.Filled.Category">
            Add Category
        </MudButton>
    </MudItem>
</MudGrid>